<%- model_class = Userprofile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:firstname) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @userprofiles.each do |userprofile| %>
      <tr>
        <td><%= link_to userprofile.id, userprofile_path(userprofile) %></td>
        <td><%= userprofile.name %></td>
        <td><%= userprofile.firstname %></td>
        <td><%= userprofile.age %></td>
        <td><%= userprofile.country %></td>
        <td><%=l userprofile.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      userprofile_path(userprofile), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_userprofile_path(userprofile), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      userprofile_path(userprofile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_userprofile_path,
            :class => 'btn btn-primary' %>
