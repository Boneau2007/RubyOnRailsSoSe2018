  <%- model_class = Userprofile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

  <%# if @userprofile.image != nil %>
    <%#= image_tag @userprofile.image, class: 'img-thumbnail card-img-top img-fluid' %>
  <%# else %>
    <%= image_tag(@userprofile.avatar_attachment_path, class: 'img-thumbnail card-img-top img-fluid') %>
  <%# end %>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @userprofile.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:firstname) %>:</strong></dt>
  <dd><%= @userprofile.firstname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
  <dd><%= @userprofile.age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @userprofile.country %></dd>
</dl>
  <% if current_user.id == @userprofile.id  %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              userprofiles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_userprofile_path(@userprofile), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              userprofile_path(@userprofile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end%>
