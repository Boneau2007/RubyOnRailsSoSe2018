	<!-- Renders the complete Navigation bar -->
	<%= render 'layouts/navbar' %>
	
    <div class="container">
		<div class="row">
			<div class="col-lg-9">
				<%= bootstrap_flash %>
				<!-- Renders the complete Bodycontent -->
				<%= yield %>
			</div>
		</div>
		<footer>
			<p>&copy; Alexander Huber 2018</p>
		</footer>
    </div>
	
  </body>
</html>
